  <h1>
    Photos
    <a href="/photos/new" class="btn btn-lg btn-success">New Photo</a>
  </h1>
</div>

  <% @photos.each do |photo| %>
<div class="panel panel-default">
  <div class="panel-heading"> <%= photo.user_id %>  </div>
  <div class="panel-body">
      <table class="table table-striped table-hover">
    <tr> <img src= "<%= photo.image %>" height="250px" > </tr>
    <tr> 
  </table>
  </div>
</div>

<% end %>






<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td> <img src= "<%= photo.image %>" height="250px" > </td>
        <td><%= photo.user_id %></td>
        <td>
          <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>
          <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
