<div class="page-header">
  <h1>
    <%= @user.username %>'s wall
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
      </tr>

      <tr>
        <td> <%= @user.id %> </td>
        <td> <%= @user.username %> </td>
        <td> <%= @user.email %> </td>
      </tr>

    </table>
  </div>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.caption %></td>
        <td> <img src= "<%= photo.image %>" height="250px" > </td>
        <td>
          <a href="/photos/<%= photo.id %>" class="btn btn-primary">Show</a>
          <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
